{% extends 'templates/base.html.twig' %}

{% block body2 %}
    <h2>Voici la liste des flashs : </h2>

    <ul>
    {% for msg in app.session.flashBag.get('info') %}
        <li>{{ msg }}</li>
    {% endfor %}
    </ul>

    <p>
    {% if user is null%}
        null
    {% else %}
        {% if user.isadmin == true %}
            {{ user.nom }} est admin
        {% else %}
            {{ user.nom }} n'est pas admin
        {% endif %}
    {% endif %}
    </p>
    <ul><span>INFOS</span><br/>
        {% for msg in app.session.flashBag.get('info') %}
            <li>{{ msg }}</li>
        {% endfor %}
    </ul>
{% endblock %}